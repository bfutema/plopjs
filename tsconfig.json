{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@constants/*": ["./src/constants/*"],
      "@docs/*": ["./src/docs/*"],
      "@jobs/*": ["./src/jobs/*"],
      "@keys/*": ["./src/keys/*"],
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}
